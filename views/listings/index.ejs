        <% for (const listing of allListings) { %>
            <div class="col">
                <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none">
                    <div class="card custom-card">
                        <img src="<%= listing.image.url %>" class="card-img-top custom-card-img" alt="img" style="height: 20rem;">
                        <div class="card-body">
                            <p class="card-text" style="font-size: 1.1rem; margin: 0;"><b>
                                    <%= listing.title %>
                                </b></p>
                            <p class="card-text">â‚¹<%= listing.price %> &#47;night</p>
                        </div>
                    </div>
                </a>
            </div>
            <% } %>
    </div>
</div>