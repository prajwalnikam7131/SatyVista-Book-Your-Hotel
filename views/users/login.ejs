<div class="container col-4 mt-5 new-container">

    <h2 class="text-center mb-3">Sign in</h2>
    <form method="post" action="/login" class="needs-validation" novalidate>

        <div class="form-floating mb-3">
            <input name="username" type="text" class="form-control" id="floatingUsername" placeholder="username"
                required>
            <label for="floatingUsername">Username</label>
        </div>

        <div class="form-floating mb-3">
            <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password"
                required>
            <label for="floatingPassword">Password</label>
        </div>

        <div class="d-flex justify-content-center mb-3">
            <button type="submit" class="btn btn-danger">Login</button>
        </div>

        <div class="d-flex justify-content-center mb-3">
            <p>Don't have an account?<a href="/signup" style="text-decoration: none;">&nbsp;Register here</a></p>
        </div>

    </form>
</div>