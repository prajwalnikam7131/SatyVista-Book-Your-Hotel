<div class="container col-4 mt-5 new-container">

    <h2 class="text-center mb-3">Create Account</h2>
    <form method="post" action="/signup" class="needs-validation" novalidate>
        <div class="form-floating mb-3">
            <input name="username" type="text" class="form-control" id="floatingUsername" placeholder="username" required>
            <label for="floatingUsername">Username</label>
        </div>
        <div class="form-floating mb-3">
            <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" required>
            <label for="floatingInput">Email</label>
        </div>
        <div class="form-floating mb-3">
            <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required>
            <label for="floatingPassword">Password</label>
        </div>
        <div class="d-flex justify-content-center mb-3">
            <button type="submit" class="btn btn-danger">Create My Account</button>
        </div>
        <div class="d-flex justify-content-center mb-3">
            <p>Already have an account?<a href="/login" style="text-decoration: none;">&nbsp;Sign in</a></p>
        </div>
    </form>
</div>